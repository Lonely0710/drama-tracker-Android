<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <!-- 海报图片 -->
    <ImageView
        android:id="@+id/iv_poster"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_poster"
        tools:src="@drawable/placeholder_poster" />

    <!-- 内容区域 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <!-- 标题区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_title_zh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="中文标题" />

            <TextView
                android:id="@+id/tv_title_original"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Original Title" />
        </LinearLayout>

        <!-- 简介区域 -->
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:visibility="gone"
            tools:text="这里是作品简介，简单介绍作品内容。最多显示两行，超出部分用省略号表示。"
            tools:visibility="visible" />

        <!-- 年份和时长 -->
        <LinearLayout
            android:layout_width="match_parent" 
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <!-- 年份 - 加大显示 -->
            <TextView
                android:id="@+id/tv_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                tools:text="2024" />
                
            <!-- 完整日期 -->
            <TextView
                android:id="@+id/tv_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"
                tools:text="2024-05-01" />
                
            <!-- 时长 -->
            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                tools:text="24集 / 25分钟" />
        </LinearLayout>

        <!-- 评分区域 - 使用水平布局包含三种评分 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" 
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 豆瓣评分 -->
            <LinearLayout
                android:id="@+id/layout_rating_douban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_douban_green" />

                <TextView
                    android:id="@+id/tv_rating_douban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    tools:text="8.7" />
            </LinearLayout>

            <!-- IMDb评分 -->
            <LinearLayout
                android:id="@+id/layout_rating_imdb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_imdb" />

                <TextView
                    android:id="@+id/tv_rating_imdb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    tools:text="7.8" />
            </LinearLayout>

            <!-- Bangumi评分 -->
            <LinearLayout
                android:id="@+id/layout_rating_bangumi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_bangumi" />

                <TextView
                    android:id="@+id/tv_rating_bangumi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    tools:text="9.2" />
            </LinearLayout>
        </LinearLayout>

        <!-- 制作人员和收藏按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <!-- 制作人员 -->
            <LinearLayout
                android:id="@+id/layout_staff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_staff"
                    app:tint="@color/text_primary" />
                    
                <TextView
                    android:id="@+id/tv_staff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-light"
                    tools:text="导演: 宫崎骏 | 编剧: 宫崎骏" />
            </LinearLayout>
            
            <!-- 收藏按钮 -->
            <ImageButton
                android:id="@+id/btn_collect"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_favorite_border"
                app:tint="@color/warning"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>