<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Widget style -->
    <style name="Widget.DramaTracker" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/surface</item>
    </style>

    <!-- Base ImageView style -->
    <style name="Widget.DramaTracker.ImageView" parent="">
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Search TextInputLayout style -->
    <style name="Widget.DramaTracker.TextInputLayout.Search" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxBackgroundColor">@color/surface</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="endIconMode">clear_text</item>
        <item name="startIconDrawable">@drawable/ic_search</item>
        <item name="boxCornerRadiusTopStart">28dp</item>
        <item name="boxCornerRadiusTopEnd">28dp</item>
        <item name="boxCornerRadiusBottomStart">28dp</item>
        <item name="boxCornerRadiusBottomEnd">28dp</item>
    </style>

    <!-- TabLayout style -->
    <style name="Widget.DramaTracker.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabTextColor">@color/text_secondary</item>
        <item name="tabSelectedTextColor">@color/primary</item>
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/TextAppearance.DramaTracker.Tab</item>
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabMinWidth">80dp</item>
        <item name="tabGravity">center</item>
    </style>

    <!-- Tab text style -->
    <style name="TextAppearance.DramaTracker.Tab" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 文本样式 -->
    <style name="TextAppearance.DramaTracker.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.DramaTracker.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.DramaTracker.Subtitle1" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.DramaTracker.Subtitle2" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.DramaTracker.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.DramaTracker.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- 按钮样式 -->
    <style name="Widget.DramaTracker.Button" parent="Widget.Material3.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="Widget.DramaTracker.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Widget.DramaTracker.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">48dp</item>
        <item name="rippleColor">@color/primary</item>
    </style>

    <!-- 卡片样式 -->
    <style name="Widget.DramaTracker.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">1dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="Widget.DramaTracker.CardView.Elevated" parent="Widget.DramaTracker.CardView">
        <item name="cardElevation">4dp</item>
    </style>

    <!-- 输入框样式 -->
    <style name="Widget.DramaTracker.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
    </style>

    <!-- 分割线样式 -->
    <style name="Widget.DramaTracker.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <!-- 图标样式 -->
    <style name="Widget.DramaTracker.ImageView.Icon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="tint">@color/text_primary</item>
    </style>

    <style name="Widget.DramaTracker.ImageView.Icon.Small">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="Widget.DramaTracker.ImageView.Icon.Large">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <!-- 底部导航栏样式 -->
    <style name="Widget.DramaTracker.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/primary</item>
        <item name="itemTextColor">@color/primary</item>
        <item name="itemRippleColor">@color/primary</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- 标签样式 -->
    <style name="Widget.DramaTracker.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/surface</item>
        <item name="chipStrokeColor">@color/primary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="chipMinHeight">32dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 底部导航文本样式 -->
    <style name="BottomNavigationTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:elevation">0dp</item>
    </style>
</resources>
